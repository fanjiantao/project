						<target>${jdk.version}</target>
						<showDeprecation>true</showDeprecation>
						<showWarnings>true</showWarnings>
						<fork>true</fork>
		                <executable>D:\Program Files\Java\jdk1.6.0_45\bin\javac.exe</executable>
					</configuration>
				</plugin>
